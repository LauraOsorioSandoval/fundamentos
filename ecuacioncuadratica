#include <iostream>

using namespace std;

int main()
{
    float a, b, c, d, suma, multiplicacion, division,x;
    
    cout<<"Ingresar el valor de a: ";
    cin>>a;
    
    cout<<"Ingresar el valor de b: ";
    cin>>b;
    
    cout<<"Ingresar el valor de c: ";
    cin>>c;
    
    d=(b*b)-(4*a*c);
    
    if (d==0)
    { 
    x=-b/(2*a);
    cout<<"la solucion es: "<<x;
    
    }
    
    else
    {
    cout<<"no permitido";
    }
    return 0;
}
