#include <iostream>
#include "math.h"
using namespace std;

int main()
{
	    float n, acum = 0, signo = 1, x, f = 1;
		int i; 
		do {
			cout << "Ingrese el numero de elementos: ";
			cin >> n;

		} while (n < 0);
		do {
				cout << "Ingrese el valor de x: ";
				cin >> x;

      	}while (x <0 )

		for (i = 1; i <= n; i++)
		{
				f = f * i;
		        acum = acum + (signo * pow(x, i) / f);
				signo = -signo;
		}

		cout << "La suma es " << acum;
		return 0;

}
